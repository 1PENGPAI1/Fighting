#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include<string.h>
#include<windows.h>
#include<stdlib.h>
int main()
{
	char arr1[] = "wellcome to bit!!!!!!!!!!!!";
	char arr2[] = "###########################";
	int left = 0;
	int right = strlen(arr1) - 1;
	while (left <= right)
	{
		arr2[left] = arr1[left];
		arr2[right] = arr1[right];
		printf("%s\n", arr2);
		left++;
		right--;
		printf("You are the best!!!!!\n");
		Sleep(1000);
		system("cls");
	}

	return 0;
}
